{
  "name": "utility-logger",
  "version": "0.1.4",
  "description":
    "A highly configurable logging utility for both nodejs and browser environments.  Allows logging to console, file (for node environment) or configurable DOM overlay (for browser).",
  "main": "dist/utility-logger.js",
  "scripts": {
    "build": "NODE_ENV=production node_modules/rollup/bin/rollup -c rollup.config.js",
    "test": "jest"
  },
  "keywords": ["logging", "debug", "debugging"],
  "author": "Tyler Collins",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tjscollins/utility-logger.git"
  },
  "dependencies": {},
  "devDependencies": {
    "babel-jest": "^21.2.0",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-env": "^1.6.1",
    "eslint": "^4.10.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "jest": "^21.2.1",
    "rollup": "^0.51.1",
    "rollup-plugin-babel": "^3.0.2",
    "rollup-plugin-commonjs": "^8.2.6",
    "rollup-plugin-inject": "^2.0.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.1.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-uglify": "^2.0.1",
    "sinon": "^4.1.2",
    "uglify-es": "^3.1.8",
    "webpack": "^3.8.1"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": ["**/src/**/*.js"],
    "coveragePathIgnorePatterns": ["/node_modules/", "/__tests__/"],
    "testPathIgnorePatterns": ["node_modules", "__tests__/demo.js"],
    "verbose": true
  }
}
